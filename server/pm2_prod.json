{
  "name": "gift_boss",
  "script": "./bin/www",
  "cwd": "./",
  "error_file": "./logs/pm2/gift_boss-err.log",
  "out_file": "./logs/pm2/gift_boss-out.log",
  "log_date_format": "MM-DD HH:mm:ss.SSS Z",
  "instances": "1",
  "merge_logs": true,
  "exec_mode": "cluster_mode",
//  "node_args": "--expose-gc",
  "port": 80,
  "env": {
    "NODE_ENV": "production",
    "NODE_CONFIG_DIR": "./config"
  }
}